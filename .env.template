# ============================================================
# PolymarketClawBot - Environment Variables Template
# ============================================================
# Copy to .env and fill in your values:
#   cp .env.template .env
#
# NEVER commit .env to git!
# ============================================================

# --- LLM API Keys ---
GROK_API_KEY=                    # From https://x.ai - deep analysis + X sentiment
DEEPSEEK_API_KEY=                # From https://deepseek.com - cheap 24/7 loops
OPENROUTER_API_KEY=              # From https://openrouter.ai/settings/keys - hedge LLM
OPENAI_API_KEY=                  # Optional fallback

# --- Blockchain / Polymarket ---
CHAINSTACK_NODE=                 # https://polygon-mainnet.core.chainstack.com/YOUR_KEY
POLYCLAW_PRIVATE_KEY=            # 0x... EVM wallet key (USE TESTNET FIRST!)

# --- OpenClaw Gateway ---
OPENCLAW_GATEWAY_TOKEN=          # Long random token for gateway auth
OPENCLAW_GATEWAY_PORT=18789      # Default gateway port

# --- Dashboard ---
STREAMLIT_PORT=8501              # Streamlit dashboard port

# --- Redis (optional, for real-time cache) ---
REDIS_URL=redis://localhost:6379

