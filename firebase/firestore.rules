rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Config collection - encrypted ClawdBot settings
    match /config/{configId} {
      allow read, write: if request.auth != null;
      // In production, add more specific rules based on user roles
    }
    
    // Predictions collection - market analyses and edge calculations
    match /predictions/{predictionId} {
      allow read: if true; // Public read for dashboard
      allow write: if request.auth != null;
    }
    
    // Trades collection - executed trades and PnL
    match /trades/{tradeId} {
      allow read: if true; // Public read for dashboard
      allow write: if request.auth != null;
    }
    
    // Metrics collection - latency, win rate, exposure snapshots
    match /metrics/{metricId} {
      allow read: if true; // Public read for dashboard
      allow write: if request.auth != null;
    }
    
    // Cache collection - TTL documents for Redis alternative
    match /cache/{cacheId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
